*&H100
MOVE ;LIB_END 13
MOVE ;KB_KEYS 14

'BASE PROGRAM


>BASELOOP
MOVE 0 ;WTN_LOC 'RESET NUMBUFFER
I <BASE1TEXT 'PRINT BASE 1 PROMPT
;@BPRINT
;@NL
I 10 'DECIMAL
;@INPUTNUM
;@COPY
;@NO0DEC 'PRINT
;@NL
;@NL

MOVE 0 ;IGD_LOC 'RESET GD BUFFER
I <NUM1TEXT 'PRINT NUMBER 1 PROMPT
;@BPRINT
;@COPY 'GET BASE
;@NO0DEC 'PRINT BASE
;@NL

;I@EXPAND+ 'EXPAND BASE
;I@INPUT 'GET NUMBER
;I@NB_PRINT 'REPRINT NUMBER
;@NL
;@NL

I <BASE2TEXT 'PRINT BASE 2 PROMPT
;@BPRINT
;@NL
I 10 'DECIMAL
MOVE 0 ;WTN_LOC 'RESET NUMBUFFER
;@INPUTNUM
;@COPY
;@NO0DEC 'PRINT
;@NL
;@NL

;I@EXPAND+ 'EXPAND BASE

I !. 'PRINT BUSY DOT
;@PC
REFR
I 8
;@PC 'DELETE IT

REC &B11111111
'R0-3=NUMBER
'R4-7=BASE

I <NUM2TEXT1 'PRINT NUMBER MESSAGE 1
;@BPRINT
;@NL
FUNC &B11111111 ;I@PRINT-
;@NL
;@NL

I !. 'PRINT BUSY DOT
;@PC
REFR
I 8
;@PC 'DELETE IT


I <NUM2TEXT2 'PRINT NUMBER MESSAGE 2
;@BPRINT
;@NL
FUNC &B11111111 ;I@PRINT+
;@NL
;@NL


REFR

I <LINE
;@BPRINT 'PRINT LINE
;@NL
JUMP <BASELOOP

HALT
>BASE1TEXT
$Input starting base in decimal
0

>NUM1TEXT
$Input number in base 
0

>BASE2TEXT
$Input new base in decimal
0

>NUM2TEXT1
$Signed
0

>NUM2TEXT2
$Unsigned
0

>LINE
$
0

